	<script src="javascripts/vendor/respond.js"></script>
<![endif]-->

	
</head>

<body>
<div class="search-box" id="searchWrapper">
	<div id="close-button"></div>
	<div class="container">
		<form action="#">
			<div class="greeting-text"><span class="greeting"></span></div>
			<div class="input-wrapper">
				<input type="text" placeholder="type your keyword" autofocus>
			</div>
		</form>
	</div>
</div> <!-- /.search-box -->


<div class="main-page-wrapper">
	<!-- ===================================================
		Loading Transition
	==================================================== -->
	<div id="loader-wrapper">
		<div id="loader">
			<span></span>
			<span></span>
			<span></span>
			<span></span>
			<span></span>
		</div>
	</div>


	<!-- 
	=============================================
		Theme Header
	============================================== 
	-->
	<div class="header">
	</div>
	
	<!-- 
	=============================================
		Main Blog Post Wrapper
	============================================== 
	-->
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-12 blog-grid-style hover-effect-one">
				<section class="blog-list">
					<% if (blogs.length) { %>
					    <% blogs.forEach(function(blog){ %>
					      <div class="single-blog-post">
							<div class="image-box"><img src='<%= blog.img %>' alt=""></div>
							<div class="post-meta-box bg-box">
								<ul class="author-meta clearfix">
									<li class="tag"><a href=<%= '/category?type='+ encodeURIComponent(blog.type) %>><%= blog.type %></a></li>
									<li class="date"><%= blog.date %></li>
								</ul>
								<h4 class="title"><a href='<%= 'blogs/' + blog.html_name %>'><%= blog.title %></a></h4>
								<p><%= blog.intro %></p>
							</div>
						</div> 
					    <% }) %>
					  
					<% } %>
				</section>


				<div class="theme-pagination text-center">
					<ul class="clearfix get-more">
						加载更多
					</ul>
				</div> <!-- /.theme-pagination -->
			</div> <!-- /.col- -->
			
			<!-- ======================== Theme Sidebar =============================== -->
			<div class="col-lg-4 col-md-7 col-12 theme-main-sidebar">
				<div class="sidebar-box bg-box about-me">
					<h6 class="sidebar-title">About me</h6>
					<img src="images/home/me.jpeg" alt="">
					<p>hi，我叫马春潮，这是我的博客，之前做的程序员，现在做售前，从程序员到售前这个转变想了很多，以后可能会变成销售。当然我知道不管做什么，一定要不断学习新的知识，这里也将会有我的一些知识积累和分享～ 如果你想了解程序员到售前，或者其他的相关内容，可以加我微信/qq 285361464，我们一起交流～</p>
					<div class="clearfix"></div>
				</div> <!-- /.about-me -->
				<div class="sidebar-box bg-box sidebar-categories">
					<h6 class="sidebar-title">Categories</h6>
					<ul>
						<% if (types.length) { %>
				  		  <% types.forEach(function(t){ %>
							<li><a href=<%= '/category?type='+ encodeURIComponent(t.type) %>><%= t.type %></a></li>
				  		  <% }) %>
				  		<% } %>
					</ul>
				</div> <!-- /.sidebar-categories -->
				
				
			</div> <!-- /.theme-main-sidebar -->
		</div> <!-- /.row -->
	</div> <!-- /.container -->


	<!--
	=====================================================
		Footer
	=====================================================
	-->
	<footer class="theme-footer" style="background: #f9f9f9;">
		<div class="container">
			<div class="logo"><a href="index.html"><img src="images/logo/logo.png" alt=""></a></div>
			
		</div> <!-- /.container -->
	</footer> <!-- /.theme-footer -->
	

	

	<!-- Scroll Top Button -->
	<button class="scroll-top tran3s">
		<i class="fa fa-angle-up" aria-hidden="true"></i>
	</button>
	


